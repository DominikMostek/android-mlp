<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MaterialNavigationDrawerTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WithDrawer" parent="MaterialNavigationDrawerTheme.Light">
        <item name="colorPrimary">@color/my_awesome_red</item>
        <item name="colorPrimaryDark">@color/my_awesome_darker_red</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="drawerType">@integer/DRAWERTYPE_IMAGE</item>
        <item name="android:textColor">@color/white_text</item>

        <!--Color of the drawer toggle-->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.WithoutDrawer" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/my_awesome_red</item>
        <item name="colorPrimaryDark">@color/my_awesome_darker_red</item>
        <item name="android:colorForeground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <color name="my_awesome_red">#E60000</color>
    <color name="white_text">#ffffff</color>
    <color name="black_text">#000000</color>
    <color name="white">#ffffff</color>
    <color name="black">#000000</color>
    <color name="background">#EDEDED</color>
    <color name="gray">#f0f0f0</color>
    <color name="my_awesome_darker_red">#730000</color>
</resources>

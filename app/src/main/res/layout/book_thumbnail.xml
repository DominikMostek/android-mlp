<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/book_thumbnail_wrap">
        <ImageView
            android:contentDescription="thumbnail"
            android:id="@+id/book_thumbnail"
            android:layout_margin="5dp"
            android:layout_width="58dp"
            android:layout_height="90dp"
            tools:src="@drawable/no_book_thumbnail"
            />
        <TextView
            android:background="@color/white"
            android:id="@+id/search_result_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_alignLeft="@+id/book_thumbnail"
            android:layout_alignRight="@+id/book_thumbnail"
            android:layout_alignBottom="@+id/book_thumbnail"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="Kniha"
            tools:text="Kniha" />
    </RelativeLayout>

    <TextView
        android:layout_toRightOf="@id/book_thumbnail_wrap"
        android:layout_alignParentTop="true"
        android:id="@+id/title"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textStyle="bold"
        tools:text="Book title"
        />

</RelativeLayout>